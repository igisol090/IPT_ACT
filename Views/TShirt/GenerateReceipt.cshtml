@model IEnumerable<OrderingSystem.Models.TShirt>
@{
    ViewData["Title"] = "Receipt";
}

<div class="container">
    <h1 class="text-center">Receipt</h1>
    <h2>Billing Name: @ViewBag.BillingName</h2>
    <h3>Billing Address: @ViewBag.BillingAddress</h3>
    <h4>Receipt Number: @ViewBag.ReceiptNumber</h4>
    <h5>Date: @ViewBag.TodayDate</h5>

    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Display the total amount for all T-Shirts in the cart -->
    <h4>Total Amount: @Model.Sum(t => t.TotalPrice).ToString("C")</h4>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary">Return to Home</a>
    </div>
</div>